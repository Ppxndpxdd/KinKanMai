@model IEnumerable<KinKanMai.Models.Menu>;
@{
    ViewData["Title"] = "Homepage";
}
@if (Model.Count() > 0)
{
    <div class="container row gap-3">
        @foreach (var menu in Model)
        {
            <div class="card h-100" style="width: 18rem;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@menu.CanteenName</h5>
                    <p class="card-text">
                        @menu.FoodName
                    </p>
                    <p class="card-text">
                        @menu.Cost
                    </p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Add Order!</small>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-secondary"> no data!</div>
}